  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${cwd}"
      }
    },
    {
      "name": "Python: Streamlit",
      "type": "python",
      "request": "launch",
      "module": "streamlit.cli",
      "args": ["run", "${workspaceFolder}/app.py"],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${cwd}"
      }
    }
  ]
}
